<?xml version='1.1' encoding='utf-8'?>
<widget id="com.ejemplo.hola" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Hola Mundo</name>
    <description>
        Test Aplicacion
    </description>
    <author email="l2radamanthys@gmail.com" href="http://">
        Ricardo Daniel Quiroga
    </author>

    <!-- plugins -->
    <gap:plugin name="Camera" value="org.apache.cordova.core.CameraLauncher" />
    <gap:plugin name="Geolocation" value="org.apache.cordova.core.GeoBroker" />
    
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" version="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
</widget>
